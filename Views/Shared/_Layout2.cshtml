<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - emregayrımenkul</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/emregayrımenkul.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>
<body>
    <header>
      
     <header>
        <section class="m-0 p-0 img-fluid container">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <div>
                        <a class="navbar-brand" asp-controller="Admin" asp-action="Index">
                            <img src="/media/LOGO2.png" alt="Logo" style="width: 100px; height:100px">
                        </a>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 pe-5">
                            <li class="nav-item">
                               
                                <a class="nav-link" asp-controller="Admin" asp-action="CreateAdvert">İlan Ekle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-controller="Admin" asp-action="Dashboard">İlanlar</a>
                                
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Diğer İşlemler
                                </a>
                                <ul class="dropdown-menu text-center bg-dark border-0">
                                     <li>
                                        <a class="dropdown-item text-light bg-dark" asp-controller="Account" asp-action="Register"
                                           style="background-color: #212529;">Admin-Kayıt</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " aria-current="page" asp-controller="Account" asp-action="Logout">Çıkış</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </nav>
        </section>

    </header>

    </header>

    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 150px;">
            @RenderBody()
        </main>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

    <script src="~/js/script.js" asp-append-version="true"></script>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>


    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

